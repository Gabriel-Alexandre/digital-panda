{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**/*"]
      }
    },
    {
      "src": "src/payload.config.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ],
  "env": {
    "PAYLOAD_CONFIG_PATH": "dist/payload.config.js",
    "NODE_ENV": "production",
    "START_COMMAND": "yarn start"
  }
}
